<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/themecolor_yellow">

    <EditText
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Event name"
        android:fontFamily="@font/sukar_black"
        android:textColor="@color/themecolor_brown"
        android:inputType="text" />

    <AutoCompleteTextView
        android:id="@+id/event_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Food name"
        android:fontFamily="@font/sukar_black"
        android:textColor="@color/themecolor_brown"
        android:inputType="text" />

    <EditText
        android:id="@+id/event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:fontFamily="@font/sukar_black"
        android:textColor="@color/themecolor_brown"
        android:inputType="text" />

    <Button
        android:id="@+id/add_event_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Add Event"
        android:background="@color/themecolor_green"
        android:textColor="@color/black"/>


</LinearLayout>